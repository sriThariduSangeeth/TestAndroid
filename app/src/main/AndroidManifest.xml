<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="app.whatsdone.android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_account_circle"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        
        >
        <activity android:name="app.whatsdone.android.ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="app.whatsdone.android.ui.activity.GroupsActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity android:name="app.whatsdone.android.ui.activity.LoginActivity"/>
        <activity android:name="app.whatsdone.android.ui.activity.ProfileCreationActivity"/>
        <activity android:name="app.whatsdone.android.ui.activity.CodeVerificationActivity"/>
        <activity android:name="app.whatsdone.android.ui.activity.PhoneNoVerificationActivity"/>
        <activity android:name="app.whatsdone.android.ui.activity.InnerGroupDiscussionActivity"/>

     </application>

</manifest>